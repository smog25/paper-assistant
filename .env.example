# .env.example
# Crossref API politeness - REQUIRED
# This email is sent with API requests as per Crossref etiquette guidelines
CROSSREF_EMAIL=your.email@example.com

# OpenAI API key - OPTIONAL
# Leave blank to disable AI features (app will still work)
OPENAI_API_KEY=sk-your-key-here-or-leave-blank

# App configuration
MAX_PDF_SIZE_MB=10
MAX_PDF_PAGES=100
MAX_OCR_PAGES=20
CROSSREF_CONCURRENT_REQUESTS=3

# API configuration (optional)
API_BASE=http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501